<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/_4sdp"
    android:paddingBottom="@dimen/_4sdp">
    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:textSize="@dimen/_14sdp"/>
    <ImageView
        android:id="@+id/ivPlaying"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/ic_playing"
        android:padding="@dimen/_18sdp"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivVideo"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            tools:ignore="RelativeOverlap" />
        <ImageView
            android:id="@+id/ivVideo"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_video_grey"
            android:layout_toStartOf="@id/ivFav"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/ivFav"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_fav_grey"
            android:layout_toStartOf="@id/ivCached"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/ivCached"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_checked"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_4sdp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</LinearLayout>